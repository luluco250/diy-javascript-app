{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"jsx": "react-jsx",
	},
	"include": [
		"./source/**/*",
	],
	"exclude": [
		"node_modules/"
	]
}
